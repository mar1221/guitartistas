<!-- breadcrumbs -->
<ul class="breadcrumb">
  <li>
    <%= link_to 'Home', root_path %> <span class="divider">/</span>
  </li>
  <li class="active">Biographies</li>
</ul>

<nav class="vertical small left well">
  <ul class="nav nav-pills nav-stacked">
    <% @biographies.each do |biography| %>
      <li>
        <a href="/biographies/<%= biography.slug %>" class="ajax">
          <i class="icon-circle-arrow-right icon-white"></i>
          <%= biography.title %>
        </a>
      </li>
    <% end %>
  </ul>
</nav>

<article id="biography" class="large right clearfix">
  <% if @biography.nil? %>       
    <header>      
      <h1>Guitartistas</h1>              
    </header>

    <%= image_tag 'http://lorempixel.com/150/150', :class => 'frame left' %>

    <p>
      Here goes some text about guitartistas. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam sodales 
      urna non odio egestas tempor. Nunc vel vehicula ante. Etiam bibendum 
      iaculis libero, eget molestie nisl pharetra in. In semper consequat est, 
      eu porta velit mollis nec.
    </p>        
  <% else %>
    <%= render 'show' %>
  <% end %>
</article>